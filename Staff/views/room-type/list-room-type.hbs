<div class="container-fluid">
  <div id="search-form" class="row mt-3 justify-content-end">
    <div class="col-12 col-md-6 col-xl-4 mb-3">
      <form action="/room-type">
        <div class="p-1 bg-light rounded rounded-pill shadow-lg d-flex justify-content-end">
          <div class="input-group">
            <input id="myInput" type="search" name="type" placeholder="Nhập tên loại phòng bạn cần tìm?" aria-describedby="btn-search" class="form-control border-0 bg-light">
            <div class="input-group-append">
              <button id="btn-search" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="table-responsive">
    <table id="myTable" class="table table-bordered">
      <thead>
        <tr>
          <th>Tên</th>
          <th class="text-center">Diện tích</th>
          <th class="text-center">Số giường</th>
          <th class="text-center">Mô tả</th>
          <th class="text-center">Ảnh</th>
          <th class="text-center">Loại</th>
          <th class="text-center">Số người tối đa</th>
          <th>Danh sách phòng</th>
        </tr>
      </thead>

      <tbody>
        {{#each roomType}}
          <tr>
            <td><b>{{this.name}}</b></td>            
            <td class="text-center">{{this.area}} m<sup>2</sup></td>
            <td class="text-center">{{this.bed}}</td>
            <td class="text-left">{{this.description}}</td>
            <td class="text-center">
              <a href="{{this.image}}" target="_blank">
                <img style="border-radius: 10px;" src="{{this.image}}" alt="{{this.name}}" class="img-fluid" width="150px" height="auto">
              </a>
            </td>
            <td class="text-center">{{this.type}}</td>
            <td class="text-center">{{this.MaxOfPeople}}</td>
            <td>
              {{#each this.rooms}}               
                  <p class="text-center">{{this}}</p>                    
              {{/each}}                            
            </td>                     
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="center">
  <div class="mb-2">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item {{#unless this.isPreviousPage}} disabled {{/unless}}">
          <a class="page-link " href="/room-type?page={{this.previousPage}}&type={{type}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
        {{#each pages}}
        <li class="page-item {{#if this.isCurrentPage}} active {{/if}}">
          <a class="page-link" href="/room-type?page={{this.page}}&type={{../type}}">{{this.page}}</a>
        </li>
        {{/each}}

        <li class="page-item {{#unless this.isNextPage}} disabled {{/unless}}">
          <a class="page-link" href="/room-type?page={{this.nextPage}}&type={{type}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>