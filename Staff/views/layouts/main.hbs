<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Staff</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/notification.css" />
    <link rel="stylesheet" href="/css/styles.css"/>
    <link rel="stylesheet" href="/css/my_style.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <script
      src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js"
      type="text/javascript"
    ></script>
    <link
      href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
      <!-- Navbar Brand-->
      <a class="navbar-brand ps-3" href="/">Staff</a>
      <!-- Sidebar Toggle-->
      <button
        class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0"
        id="sidebarToggle"
        href="#!"
      ><i class="fas fa-bars"></i></button>
      <!-- Navbar Search-->
      <form
        class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"
      >
        <div class="input-group">
          <input
            hidden
            class="form-control"
            type="text"
            placeholder="Tìm kiếm..."
            aria-label="Search for..."
            aria-describedby="btnNavbarSearch"
          />
          <button
            hidden
            class="btn btn-primary"
            id="btnNavbarSearch"
            type="button"
          ><i class="fas fa-search"></i></button>
        </div>
      </form>

      {{#if isAuthenticated}}
        <p class="navbar-text" style="margin-top: auto;">
          Welcome
          <b> {{authUser.fullname}}</b>
        </p>
      {{/if}}
      <div class="notifications">
			<button type="button" class="icon_wrap">
				<i class="fas fa-bell"></i>
				<span style="font-size: 10px;" class="icon-button__badge">2</span>
			</button>
			<div class="notification_dd">
                <h5 class="text-center mt-2">Thông báo</h5>
                <hr class="mt-0 mb-0">
				<ul class="notification_ul">
					<li class="starbucks success">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="notify_data">
                                <div class="title">Lorem, ipsum dolor.</div>
                                <div class="sub_title">
                                Lorem ipsum dolor sit amet consectetur.
                                </div>
                            </div>
                            <div class="notify_status">
                                <a title="chưa xem"><i class="fas fa-circle" style="font-size: 12px; color: rgb(5, 126, 173)"></i></a>
                            </div>
                        </div>
					</li>
					
					<li class="show_all">
					<p class="link">Show All Activities</p>
					</li>
				</ul>
			</div>
      </div>
      <!-- Navbar-->
      <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            id="navbarDropdown"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          ><i class="fas fa-user fa-fw"></i></a>
          <ul
            class="dropdown-menu dropdown-menu-end"
            aria-labelledby="navbarDropdown"
          >
            <li
              class="d-flex align-items-center justify-content-around dropdown-item"
            >
              <i class="fas fa-sign-out-alt"></i>
              <a class="dropdown-item" href="/staff/logout">Đăng xuất</a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li
              class="d-flex align-items-center justify-content-around dropdown-item"
            >
              <i class="fas fa-user-circle"></i>
              <a class="dropdown-item" href="/staff/profile">Thông tin tài khoản</a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li
              class="d-flex align-items-center justify-content-around dropdown-item"
            >
              <i class="fas fa-user-edit"></i>
              <a class="dropdown-item" href="/staff/edit-profile">Cập nhật tài
                khoản</a>
            </li>            
          </ul>
        </li>
      </ul>
    </nav>
    <div id="layoutSidenav">
      <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
          <div class="sb-sidenav-menu">
            <div class="nav">
              <div class="sb-sidenav-menu-heading">Tài khoản</div>

              <a class="nav-link" href="/account?page=1">
                <div class="sb-nav-link-icon"><i
                    class="fas fa-list-ul"
                  ></i></div>
                Xem danh sách
              </a>              

              <div class="sb-sidenav-menu-heading">Khách hàng</div>
              <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                  <div class="sb-nav-link-icon"><i class="fas fa-list-ul"></i></div>
                    Xem danh sách
                  <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
              </a>
              <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                  <nav class="sb-sidenav-menu-nested nav">
                      <a class="nav-link" href="/customer?status=using&page=1">
                       <div class="sb-nav-link-icon">
                         <i class="fas fa-check-circle" style="color: green;"></i>
                       </div>                        
                        Đang sử dụng
                      </a>
                      <a class="nav-link" href="/customer?status=pending&page=1">
                        <div class="sb-nav-link-icon">
                          <i class="fas fa-lock" style="color: orange;"></i>
                        </div>
                        Đang đặt phòng
                      </a>
                  </nav>
              </div>           

              <div class="sb-sidenav-menu-heading">Dịch vụ</div>
              <a class="nav-link" href="/service?page=1">
                <div class="sb-nav-link-icon"><i
                    class="fas fa-list-ul"
                  ></i></div>
                Xem danh sách
              </a>
              
              <a class="nav-link" href="/service-type?page=1">
                <div class="sb-nav-link-icon"><i class="fas fa-indent"></i></div>
                Loại dịch vụ
              </a>


              <div class="sb-sidenav-menu-heading">Loại phòng</div>          
              <a class="nav-link" href="/room-type?page=1">
                <div class="sb-nav-link-icon"><i class="fas fa-indent"></i></div>
                Xem danh sách
              </a>
              <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#room" aria-expanded="false" aria-controls="collapseLayouts">
                  <div class="sb-nav-link-icon"><i class="fas fa-list-ul"></i></div>
                    Phòng
                  <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
              </a>
              <div class="collapse" id="room" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                  <nav class="sb-sidenav-menu-nested nav">
                      <a class="nav-link" href="/room?status=using&page=1">
                       <div class="sb-nav-link-icon">
                         <i class="fas fa-check-circle" style="color: green;"></i>
                       </div>                        
                        Đang được dùng
                      </a>
                      <a class="nav-link" href="/room?status=pending&page=1">
                        <div class="sb-nav-link-icon">
                          <i class="fas fa-check-circle" style="color: orange;"></i>
                        </div>
                        Đã được đăng ký
                      </a>
                      <a class="nav-link" href="room?status=done&page=1">
                        <div class="sb-nav-link-icon">
                          <i class="fas fa-times-circle" style="color: red;"></i>
                        </div>
                        Còn trống
                      </a>
                  </nav>
              </div>  
            </div>
          </div>

        </nav>
      </div>
      <div id="layoutSidenav_content">
        {{{body}}}
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script src="js/notification.js"></script>
    <script src="/js/scripts.js"></script>
    <script src="/js/search.js"></script>
  </body>
</html>