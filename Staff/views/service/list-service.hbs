<div class="container-fluid">
  <div id="search-form" class="row mt-3 justify-content-end">
    <div class="col-12 col-md-6 col-xl-4 mb-3">
      <form  action="/service">   
          <div class="p-1 bg-light rounded rounded-pill shadow-lg d-flex justify-content-end">
          <div class="input-group">
            <input id="myInput" type="search" name = "name" placeholder="Nhập tên dịch vụ bạn cần tìm?" aria-describedby="btn-search" class="form-control border-0 bg-light">
            <div class="input-group-append">
              <button id="btn-search" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </form>
      
    </div>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="table-responsive">
    <table id="myTable" class="table table-hover table-striped table-bordered">
      <thead>
        <tr>
          <th>Tên dịch vụ</th>
          <th>Mô tả</th>
          <th>Giá</th>
          <th>Ảnh</th>
          <th>Loại dịch vụ</th>
        </tr>
      </thead>

      <tbody>
        {{#each service}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>            
            <td>
              <a href="{{this.image}}" target="_blank">
                <img 
                src="{{this.image}}" 
                class="thumbnail img-responsive" 
                alt="{{this.name}}" 
                width="100" 
                height="100"
                style="border-radius: 10px;">
              </a>
            </td>
            <td>{{this.type}}</td>             
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="center">
  <div class="mb-2 position-absolute" style="bottom: 0px;">
      <nav aria-label="Page navigation example">
          <ul class="pagination">
              <li class="page-item {{#unless this.isPreviousPage}} disabled {{/unless}}">
                  <a class="page-link " href="/service?page={{this.previousPage}}&name={{name}}" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                  </a>
              </li>
              {{#each pages}}
                  <li class="page-item {{#if this.isCurrentPage}} active {{/if}}">
                      <a class="page-link" href="/service?page={{this.page}}&name={{../name}}">{{this.page}}</a>
                  </li>
              {{/each}}

              <li class="page-item {{#unless this.isNextPage}} disabled {{/unless}}">
                  <a class="page-link" href="/service?page={{this.nextPage}}&name={{name}}" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                  </a>
              </li>
          </ul>
      </nav>
  </div>
</div>