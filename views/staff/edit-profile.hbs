<section
  class="vh-50 bg-image"
  style="background-image: url('https://mdbootstrap.com/img/Photos/new-templates/search-box/img4.jpg'); background-size: cover;"
>
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card mt-4" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-3">Cập nhật thông tin</h2>

              <form method="POST" action="/staff/edit-profile">

                <input type="hidden" name="_id" value="{{id}}" />

                <div class="form-outline mb-2">
                <label class="form-label" for="username">Username</label>
                <input
                  name="username"
                  value="{{staff.username}}"
                  type="text"
                  id="username"
                  class="form-control form-control-lg"
                  required
                />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="name">Họ tên</label>
                  <input
                    name="fullname"
                    value="{{staff.fullname}}"
                    type="text"
                    id="name"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                 <div class="form-outline mb-2">
                  <label class="form-label" for="datepicker">Ngày sinh</label>
                  <input
                    value="{{staff.birthday}}"
                    name="birthday"
                    id="datepicker"
                    class="form-control form-control-lg"
                    readonly
                    required
                  />
                  <script>
                    $('#datepicker').datepicker({ uiLibrary: 'bootstrap4' });
                  </script>
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="phone-number">Số điện thoại</label>
                  <input
                    name="phone"
                    value="{{staff.phone}}"
                    type="text"
                    id="phone-number"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="email">Email</label>
                  <input
                    name="email"
                    value="{{staff.email}}"
                    type="text"
                    id="email"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="bankAccountNumber">Số tài khoản</label>
                  <input
                    name="bankAccountNumber"
                    value="{{staff.bankAccountNumber}}"
                    type="text"
                    id="bankAccountNumber"
                    class="form-control form-control-lg"
                    required
                  />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="ID">ID</label>
                  <input
                    name="ID"
                    value="{{staff.ID}}"
                    type="text"
                    id="ID"
                    class="form-control form-control-lg"
                    required
                  />
                </div>
              

                <div class="d-flex align-items-center justify-content-around">
                  <div class="d-flex justify-content-center mt-5">
                    <button
                      type="submit"
                      class="btn btn-primary btn-block btn-lg gradient-custom-4"
                    >Cập nhật</button>
                  </div>

                  <div class="d-flex justify-content-center mt-5">
                    <a
                      href="/staff/change-password"
                      class="btn btn-primary btn-block btn-lg gradient-custom-4"
                    >Đổi mật khẩu</a>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>