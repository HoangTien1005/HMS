<div class="container-fluid">
  <div id="search-form" class="row mt-3 justify-content-start">

    <div class="col-12 col-md-6 col-xl-8 mb-3">
        <a class="btn btn-primary btn-block gradient-custom-4" href="/room-type/add-room-type">
          <i class="fas fa-plus-circle"></i>
          Thêm loại phòng
        </a>
    </div>

    <div class="col-12 col-md-6 col-xl-4 mb-3">
      <div class="p-1 bg-light rounded rounded-pill shadow-lg d-flex justify-content-end">
        <div class="input-group">
          <input id="myInput" type="search" onkeyup="mySearchFunction()" placeholder="Nhập tên loại phòng bạn cần tìm?" aria-describedby="btn-search" class="form-control border-0 bg-light">
          <div class="input-group-append">
            <button id="btn-search" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="table-responsive">
    <table id="myTable" class="table table-bordered">
      <thead>
        <tr>
          {{!-- <th width="15%">Loại phòng</th>
          <th width="10%">Diện tích</th>
          <th width="12%">Giường đơn/đôi</th>
          <th width="10%">Mô tả</th>
          <th width="10%">Ảnh</th>
          <th width="12%">Số người tối đa</th>
          <th width="20%">Danh sách phòng</th>
          <th width="15%">Điều chỉnh</th> --}}
          <th>Loại phòng</th>
          <th>Diện tích</th>
          <th>Giường đơn/đôi</th>
          <th>Mô tả</th>
          <th>Ảnh</th>
          <th>Số người tối đa</th>
          <th>Danh sách phòng</th>
          <th>Điều chỉnh</th>
        </tr>
      </thead>

      <tbody>
        {{#each roomType}}
          <tr>
            <td><h6>{{this.name}}</h6></td>            
            <td>{{this.area}} m<sup>2</sup></td>
            <td>{{this.singleBed}}/{{this.doubleBed}}</td>
            <td>{{this.description}}</td>
            <td>
              <a href="{{this.image}}" target="_blank">
                <img src="{{this.image}}" alt="{{this.name}}" class="img-fluid" width="150px" height="auto">
              </a>
            </td>
            <td>{{this.maxOfPeople}}</td>
            <td class="list-room{{@index}}"></td>
            <td>
              <div class="row">
                <div class="col-4">
                  <a href="/room-type/edit-room-type/{{_id}}">
                    <i class="far fa-edit" style="font-size: 15px;"
                    title="Chỉnh sửa loại phòng"></i>
                  </a>
                </div>

                <div class="col-4">
                  <a
                   href="/room-type/delete-room-type/{{_id}}"
                  onclick="return confirm('Bạn có muốn xóa loại phòng này không')"
                >
                  <i class="fas fa-trash" style="color: red; font-size: 15px" 
                    title="Xóa loại phòng" >
                  </i>
                </a>              
                </div>
              </div>                      
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<input type="hidden" value={{length}} id="length">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  $(document).ready(function(){
    const length = $('#length').val();
    for(let i = 0; i < length; i++){
      $(".list-room"+i).append($(".room"+i));
    }
  });  
</script>

{{#each rooms}}
  <div class="room{{@index}}">
    {{#if this}}
      {{#each this}}      
          <div class="room d-flex justify-content-between mb-3">
            <div style="display: flex;">                       
              <div>
                <p>Phòng: {{this.roomNumber}}</p>
                {{#ifCond this.status '==' false}}
                  <p style="color: green;">Trống</p>
                {{else}}
                  <p style="color: red;">Đã đặt</p>
                {{/ifCond}}
              </div>
            </div>         
            
            <div>
              <a href="/room/delete-room/{{_id}}" 
                onclick="return confirm('Bạn có muốn xóa phòng khỏi loại phòng này không')">
                <i class="fas fa-trash" 
                  style="color: red; font-size: 15px; margin-right: 20px"
                  title="Xóa phòng" >
                </i>
              </a>              
            </div>

          </div>      
      {{/each}}
    {{else}}
      <h6>Không có phòng nào</h6>
    {{/if}}
  </div>
{{/each}}

<div class="center">
  <div class="mb-2 position-absolute" style="bottom: 0px;">
      <nav aria-label="Page navigation example">
          <ul class="pagination">
              <li class="page-item {{#unless this.isPreviousPage}} disabled {{/unless}}">
                  <a class="page-link " href="/room-type/list-room-type?page={{this.previousPage}}" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                  </a>
              </li>
              {{#each pages}}
                  <li class="page-item {{#if this.isCurrentPage}} active {{/if}}">
                      <a class="page-link" href="/room-type/list-room-type?page={{this.page}}">{{this.page}}</a>
                  </li>
              {{/each}}

              <li class="page-item {{#unless this.isNextPage}} disabled {{/unless}}">
                  <a class="page-link" href="/room-type/list-room-type?page={{this.nextPage}}" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                  </a>
              </li>
          </ul>
      </nav>
  </div>
</div>