<div id="search-form" class="row flex-row-reverse mt-3 me-5">
  <div class="p-1 bg-light rounded rounded-pill shadow-lg col-4">
    <div class="input-group">
      <input id="myInput" type="search" onkeyup="mySearchFunction()" placeholder="Nhập tên sản phẩm bạn cần tìm?" aria-describedby="btn-search" class="form-control border-0 bg-light">
      <div class="input-group-append">
        <button id="btn-search" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
      </div>
    </div>
  </div>
</div>

<table id="myTable" class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Tên sản phẩm</th>
      <th>Chi tiết</th>
      <th>Số lượng</th>
      <th>Giá</th>
      <th>Ảnh</th>
      <th>Danh mục</th>
      <th>Thương hiệu</th>
      <th>Điều chỉnh</th>
    </tr>
  </thead>

  <tbody>
    {{#each product}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.details}}</td>
        <td>{{this.quantity}}</td>
        <td>{{this.price}}</td>
        <td>
          <a href="{{this.image}}" target="_blank">
            <img 
            src="{{this.image}}" 
            class="thumbnail img-responsive" 
            alt="{{this.name}}" 
            width="100" 
            height="100"
            style="border-radius: 10px;">
          </a>
        </td>
        <td>{{this.category}}</td>
        <td>{{this.producer}}</td>
        <td>
          <div class="center">
            <a href="/product/edit-product/{{_id}}">
              <i class="far fa-edit" title="Chỉnh sửa sản phẩm"></i>
            </a>

            <a
              href="/product/delete-product/{{_id}}"
              onclick="return confirm('Bạn có muốn xóa không')"
            >
              <i class="fas fa-trash" style="margin-left: 30px; color: red" title="Xóa sản phẩm"></i>
            </a>
          </div>

        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<div class="center mb-2 mt-3">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item {{#unless this.isPreviousPage}} disabled {{/unless}}">
                <a class="page-link " href="/product/list-product/{{this.previousPage}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            {{#each pages}}
                <li class="page-item {{#if this.isCurrentPage}} active {{/if}}">
                    <a class="page-link" href="/product/list-product/{{this.page}}">{{this.page}}</a>
                </li>
            {{/each}}

            <li class="page-item {{#unless this.isNextPage}} disabled {{/unless}}">
                <a class="page-link" href="/product/list-product/{{this.nextPage}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>