<section
  class="vh-50 bg-image"
  style="background-image: url('https://mdbootstrap.com/img/Photos/new-templates/search-box/img4.jpg'); background-size: cover;"
>
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card mt-4" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-3">Cập nhật thông tin</h2>
              <!-- alert error -->
              {{#if error}}
                <div class="alert alert-danger" role="alert">
                  {{error}}
                </div>
              {{/if}}

              <form method="POST" action="/staff/edit-staff">
                <input type="hidden" name="_id" value="{{staff._id}}" />

                <div class="form-outline mb-2">
                  <label class="form-label" for="name">Họ tên</label>
                  <input
                    name="name"
                    type="text"
                    id="name"
                    class="form-control form-control-lg"
                    value="{{staff.fullname}}"
                    required
                  />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="datepicker">Ngày sinh</label>
                  <input
                    name="birthday"
                    id="datepicker"
                    class="form-control"
                    readonly
                    required
                    value="{{staff.birthday}}"
                  />
                  <script>
                    $('#datepicker').datepicker({ uiLibrary: 'bootstrap4' });
                  </script>
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="phone">Số điện thoại</label>
                  <input
                    name="phone"
                    type="number"
                    id="phone"
                    class="form-control form-control-lg"
                    value="{{staff.phone}}"
                    required
                  />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="email">Email</label>
                  <input
                    name="email"
                    type="email"
                    id="email"
                    class="form-control form-control-lg"
                    value="{{staff.email}}"
                    required
                  />
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label" for="bank_number">Số tài khoản</label>
                  <input
                    name="bank_number"
                    type="number"
                    id="bank_number"
                    class="form-control form-control-lg"
                    value="{{staff.bankAccountNumber}}"
                    required
                  />
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label" for="ID">ID</label>
                  <input
                    name="ID"
                    type="text"
                    id="ID"
                    class="form-control form-control-lg"
                    value="{{staff.ID}}"
                    required
                  />
                </div>

                <div class="d-grid gap-2">
                  <button
                    type="submit"
                    class="btn btn-primary btn-lg btn-block"
                  >Cập nhật</button>
                </div>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>