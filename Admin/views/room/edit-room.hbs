<section
  class="vh-100 bg-image"
  style="background-image: url('https://mdbootstrap.com/img/Photos/new-templates/search-box/img4.jpg'); background-size: cover;"
>
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card mt-4" style="border-radius: 15px;">
            <div class="card-body p-5">             

              <h2 class="text-uppercase text-center mb-3">Cập nhật thông tin phòng</h2>

              <div style="display: none;" id="message" class="alert alert-danger" role="alert">                
              </div>

              <form id="edit-room-form" method="POST" action="/room/edit-room">
                <input type="hidden" name="id" value="{{room._id}}" />

                {{!-- room number --}}
                <div class="form-outline mb-3">
                  <label class="form-label" for="roomNumber">Số phòng</label>
                  <input
                    name="roomNumber"
                    type="text"
                    id="roomNumber"
                    class="form-control"
                    value="{{room.roomNumber}}"
                  />
                </div>

                {{#ifCond room.status "==" true}}

                  <div class="form-outline mb-3">
                    <label class="form-label" for="bookedDate">Ngày đặt phòng</label>
                    <input
                      name="bookedDate"
                      id="bookedDate"
                      class="form-control"
                      readonly
                      required
                      value="{{room.bookedDate}}"
                    />
                    <script>
                      $('#bookedDate').datepicker({ uiLibrary: 'bootstrap4' });
                    </script>
                  </div>

                  <div class="form-outline mb-3">
                    <label class="form-label" for="rentalEndDate">Ngày hết hạn</label>
                    <input
                      name="rentalEndDate"
                      id="rentalEndDate"
                      class="form-control"
                      readonly
                      required
                      value="{{room.rentalEndDate}}"
                    />
                    <script>
                      $('#rentalEndDate').datepicker({ uiLibrary: 'bootstrap4' });
                    </script>
                  </div>

                {{/ifCond}}                           
                
                {{!-- room type --}}
                <div class="form-outline mb-3">
                  <select
                    id="roomType"
                    name="roomType"
                    class="form-control"
                  >
                    {{#each roomType}}
                      <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                  </select>
                </div>

                <input type="hidden" name="selectedRoomType" id="selected-room-type">

              </form>

              <div class="d-grid gap-2 mt-4">
                <button
                  onclick="myFunction()"
                  class="btn btn-primary btn-block"
                >Cập nhật</button>
              </div>

              <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
              <script>
                function myFunction(){
                  (async () =>{                     
                    const roomNumber = $('#roomNumber').val();
                    const bookedDate = $('#bookedDate').val();
                    const rentalEndDate = $('#rentalEndDate').val();

                    if (roomNumber == "") {
                      $('#message').show();
                      $('#message').html('Bạn chưa nhập số phòng!');
                      $('#roomNumber').focus();
                      return;
                    }
                    if (bookedDate == "") {
                      $('#message').show();
                      $('#message').html('Bạn chưa nhập ngày đặt phòng!');
                      $('#bookedDate').focus();
                      return;
                    }
                    if (rentalEndDate == "") {
                      $('#message').show();
                      $('#message').html('Bạn chưa nhập ngày hết hạn phòng!');
                      $('#rentalEndDate').focus();
                      return;
                    }                   

                    const valueRoomType = $("#roomType option:selected").text();
                    $('#selected-room-type').val(valueRoomType);
                                                                                         
                    document.getElementById('edit-room-form').submit();  
                  })();                                                               
                }
              </script>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>