<!-- ##### Rooms Area Start ##### -->
<section class="room-details-area">
    <div class="container mb-5">
        <div class="row card mt-5">
            <div class="col-md-12 col-lg-7 col-12 bg-thumbnail bg-img d-flex align-items-center">
                <div class="bg-thumbnail bg-img">
                    <img src={{roomType.image}}/>
                </div>
            </div>
            <div class="col-md-12 col-lg-5 col-12">
                <h1 class="room-title">{{roomType.name}}</h1>
                <p class="room-info">{{roomType.description}}</p>
                <div class="room-info-container">
                    <p class="room-info">People: <span>{{roomType.maxOfPeople}}</span></p>
                    <p class="room-info">Areas: <span>100m<sup>2</sup></span></p>
                </div>
                <div class="room-info-container">
                    <p class="room-info">Beds: <span>2</span></p>
                    <p class="room-info">Rooms left: <span>2</span></p>
                </div>
                <p class="room-info room-price"><span>{{roomType.price}}$</span>/night</p>
            </div>
            <div class="col-md-12 col-lg-12 col-12 mt-4">
                <table class="table booking-table">
                    <h4>Click to select your rooms</h4>
                    {{#each table}}
                        <tr>
                            {{#each this}}
                            <td class="text-center unselectable {{roomStatus this.status}}" style="border: 1px solid black" data-id="{{this._id}}">
                                {{this.roomNumber}}
                            </td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </table>
            </div>

            

            <form class="col-12 needs-validation" novalidate>
                <div class="mt-3">
                    <label for="people" class="form-label">Number of people</label>
                    <input type="number" class="form-control" id="people" name="people" value="1" required>
                    <div class="invalid-feedback">
                        Number of people can't be 0.
                    </div>
                </div>

                <div class="mt-3">
                    <label for="checkin" class="form-label">Check In</label>
                    <input type="date" class="form-control" id="checkin" name="checkin" required>
                    <div class="invalid-feedback">
                        Check in date must not be empty.
                    </div>
                </div>

                <div class="mt-3">
                    <label for="checkout" class="form-label">Check Out</label>
                    <input type="date" class="form-control" id="checkout" name="checkout" required>
                    <div class="invalid-feedback">
                        Check in date must not be empty.
                    </div>
                </div>
                    
                <div class="book-container">
                    
                    <button type="submit" class="btn book-room-btn palatin-btn">Book Room</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="/js/formValidation.js"></script>
<script src="/js/bookingTableUI.js"></script>